<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          TNASTY
        </div>
      </div>
      <div class="image center-block">
      	<% if post.image.exists? %>
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
        <% end %>
      </div>
      <p class="caption">
        <%= link_to (post.caption), post_path(post) %>
      </p>
    </div>
  <% end %>
</div>